{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api/*"],
      "data/*": ["data/*"],
      "domain/*": ["domain/*"],
      "root/*": ["*"],
      "service/*": ["service/*"],
      "test/*": ["test/*"]
    },
    "rootDirs": ["./src"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/jest",
      "node",
      "reflect-metadata"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}