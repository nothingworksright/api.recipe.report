{
  "extends": "../../tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],

  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@recipe-report/*": ["../../*"],
    },
    "rootDirs": ["./src"],

    "noEmit": true,

    // Language and Environment
    "lib": [ // Required for Create-React-App
      "dom",
      "dom.iterable",
      "ESNext"
    ],
    "target": "es5"
  }
}
