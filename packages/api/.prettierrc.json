{
  "printWidth": 100,
  "semi": false,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "jsxSingleQuote": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^controllers/(.*)$",
    "^middlewares/(.*)$",
    "^templates/(.*)$",
    "^root/(.*)$",
    "^tests/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrderCaseInsensitive": true,
  "parser": "typescript",
  "importOrderParserPlugins" : ["classProperties", "decorators-legacy", "typescript"]
}
