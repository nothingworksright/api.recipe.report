{
  "extends": "../../tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],

  "compilerOptions": {
    // Modules
    "baseUrl": "./src",
    "paths": {
      "controllers/*": ["controllers/*"],
      "middlewares/*": ["middlewares/*"],
      "templates/*": ["templates/*"],
      "root/*": ["*"],
      "tests/*": ["tests/*"]
    },
    "rootDirs": ["./src"],
    "types": [
      "jest",
      "node",
      "inversify",
      "reflect-metadata"
    ],

    // Emit
    // "declarationDir": "./types",
    "outDir": "./dist"
  }
}
