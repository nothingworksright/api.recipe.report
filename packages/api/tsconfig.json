{
  "extends": "../../tsconfig.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],

  "compilerOptions": {
    // Modules
    "baseUrl": "./src",
    "paths": {
      "api/*": ["api/*"],
      "data/*": ["data/*"],
      "domain/*": ["domain/*"],
      "dto/*": ["dto/*"],
      "interface/*": ["interface/*"],
      "root/*": ["*"],
      "service/*": ["service/*"],
      "test/*": ["test/*"]
    },
    "rootDirs": ["./src"],
    "types": [
      "jest",
      "node",
      "reflect-metadata"
    ],

    // Emit
    "declarationDir": "./types",
    "outDir": "./dist"
  }
}
